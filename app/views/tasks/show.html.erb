<h1><%= @task.title %></h1>
<h4><%= @task.details %></h4>
  <% if @task.completed %>
    <p>Task is completed</p>
  <% else %>
    <p>Task is not completed yet</p>
  <% end%>
<%= link_to "Back", tasks_path %> |
<%= link_to "Edit", task_edit_path(@task) %> |
<%= link_to "Delete",
  task_path(@task),
  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
%>
